{
  "name": "@revcover/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "start": "node --import=tsx src/index.ts",
    "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
    "dev:plain": "tsx watch src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint -c eslint.config.js src --no-error-on-unmatched-pattern || echo Lint skipped",
    "test": "vitest run"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^13.0.2",
    "@supabase/supabase-js": "^2.44.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-raw-body": "^5.0.0",
    "jszip": "^3.10.1",
    "pdfkit": "^0.17.2",
    "stripe": "^19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.11.30",
    "@types/pdfkit": "^0.17.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.10.0",
    "tsx": "^4.16.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.1"
  }
}